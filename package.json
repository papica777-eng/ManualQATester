{
  "name": "manualqatester",
  "version": "1.0.0",
  "description": "Professional Manual QA Portfolio",
  "scripts": {
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "lint:js": "eslint \"**/*.js\" --ignore-pattern node_modules/",
    "lint:css": "stylelint \"**/*.css\" --ignore-pattern node_modules/",
    "lint:html": "htmlhint \"**/*.html\" --ignore node_modules/**",
    "lint:fix": "eslint \"**/*.js\" --fix && stylelint \"**/*.css\" --fix",
    "format": "prettier --write \"**/*.{html,css,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{html,css,js,json,md}\""
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0",
    "htmlhint": "^1.1.4",
    "prettier": "^3.2.0"
  }
}
